<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_container">
    </FrameLayout>

    <fragment
        android:id="@+id/buttons_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.appwithfragment.fragments.ButtonsFragment"
        tools:layout="@layout/fragment_buttons"/>


    <fragment
        android:id="@+id/checkboxes_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.appwithfragment.fragments.CheckBoxesFragment"
        tools:layout="@layout/fragment_checkboxes"/>


    <fragment
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.appwithfragment.fragments.ImageFragment"
        tools:layout="@layout/fragment_image"/>

</android.support.v7.widget.LinearLayoutCompat>